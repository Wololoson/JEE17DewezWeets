<title>Accueil</title>
</head>
<body>
	<%
		String type = (String) request.getAttribute("type");
		switch(type){
			case "chirurgien" : 
			%>
				<jsp:useBean id="chirurgien" class="be.gestionhopital.Models.Chirurgien" scope="session"/>
			<%
				break;
			case "secretaire" :
			%>
				<jsp:useBean id="secretaire" class="be.gestionhopital.Models.Secretaire" scope="session"/>
			<%
				break;
			case "directeur" :
			%>
				<jsp:useBean id="directeur" class="be.gestionhopital.Models.Directeur" scope="session"/>
			<%
		}
	%>
	<h1>Accueil</h1>
	
	<%
		switch(type){
			case "chirurgien" : 
			%>
				<h2>
					Bienvenue <jsp:getProperty property="nom" name="chirurgien"/>
				</h2>
			<%
				break;
			case "secretaire" :
			%>
				<h2>
					Bienvenue <jsp:getProperty property="nom" name="secretaire"/>
				</h2>
			<%
				break;
			case "directeur" :
			%>
				<h2>
					Bienvenue <jsp:getProperty property="nom" name="directeur"/>
				</h2>
			<%
		}
	%>
</body>
