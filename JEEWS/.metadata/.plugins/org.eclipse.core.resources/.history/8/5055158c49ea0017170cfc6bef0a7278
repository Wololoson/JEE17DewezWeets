package be.gestionhopital.Factory;

import java.sql.Connection;

import com.sun.jersey.api.client.config.ClientConfig;
import com.sun.jersey.api.client.config.DefaultClientConfig;

import be.gestionhopital.Connexion.DriverACCESS;
import be.gestionhopital.DAO.*;
import be.gestionhopital.Models.*;

public class DAOFactory extends AbstractDAOFactory {
	protected static final ClientConfig config = new DefaultClientConfig();

	@Override
	public DAO<Personne> getPersonneDAO() {
		return new DAOPersonne(conn);
	}

	@Override
	public DAO<Chirurgien> getChirurgienDAO() {
		return new DAOChirurgien(conn);
	}

	@Override
	public DAO<Directeur> getDirecteurDAO() {
		return new DAODirecteur(conn);
	}

	@Override
	public DAO<Notification> getNotificationDAO() {
		return new DAONotification(conn);
	}

	@Override
	public DAO<Patient> getPatientDAO() {
		return new DAOPatient(conn);
	}

	@Override
	public DAO<Reservation> getReservationDAO() {
		return new DAOReservation(conn);
	}

	@Override
	public DAO<Salle> getSalleDAO() {
		return new DAOSalle(conn);
	}

	@Override
	public DAO<Secretaire> getSecretaireDAO() {
		return new DAOSecretaire(conn);
	}
}
